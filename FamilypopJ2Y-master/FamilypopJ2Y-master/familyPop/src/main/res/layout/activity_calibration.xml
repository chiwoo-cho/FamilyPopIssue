<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CALIBRATION"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_default_string1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Measure between the middle of server phone and + on the table"
        android:id="@+id/textView16"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_default_string"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HEIGHT LENGTH"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/color_default_string"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="20 cm"
        android:id="@+id/button4"
        android:background="@drawable/button_state_0"
        android:textColor="@color/color_default_string"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/textView20"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WIDTH LENGTH"
        android:id="@+id/textView20"
        android:layout_marginTop="37dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/color_default_string"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/textView19" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="20 cm"
        android:id="@+id/button5"
        android:background="@drawable/button_state_0"
        android:layout_marginTop="22dp"
        android:textColor="@color/color_default_string"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_calibration_next"
        android:background="@drawable/button_next_on"
        android:layout_alignBottom="@+id/textView20"
        android:layout_toRightOf="@+id/button5"
        android:layout_marginLeft="27dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton9"
        android:background="@drawable/image_add"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button_calibration_next"
        android:layout_marginLeft="45dp" />

</RelativeLayout>