<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_background"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAEM"
        android:id="@+id/textView10"
        android:textColor="@color/color_default_string"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BIRTHDAY DINNER"
        android:id="@+id/textView11"
        android:textColor="@color/color_default_string"
        android:background="@color/color_default_string1"
        android:layout_weight="0.02"
        android:enabled="true"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IP ADDRESS"
        android:id="@+id/textView12"
        android:textColor="@color/color_default_string"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/ServerIPText"
        android:layout_weight="0.04"
        android:background="@color/color_default_string1"
        android:textColor="@color/color_default_string"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_server_next"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_next_on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_start_server_topmenu_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="START A DIALOGUE"
        android:id="@+id/textView32"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_topmenu_setting" />
</RelativeLayout>