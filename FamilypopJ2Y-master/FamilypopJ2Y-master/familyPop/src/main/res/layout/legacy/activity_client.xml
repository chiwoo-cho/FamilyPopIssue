<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1b1b1b"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Client mode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <!--<Button-->
        <!--android:id="@+id/applyButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Apply"-->
        <!--android:background="@drawable/button_state"-->
        <!--android:textColor="#ffffff"-->
        <!--android:layout_below="@+id/imageView5"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:enabled="false" />-->

    <Button
        android:id="@+id/imgFindButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FindImage"
        android:background="@drawable/button_state"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/TextView01" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgFindButton"
        android:layout_below="@+id/imgFindButton"/>

    <ImageView
        android:src="@drawable/client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/imgFindButton"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FRI, 24/05"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:layout_above="@+id/imageView6"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BIRTHDAY DINNER"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:src="?android:attr/listDivider"
        android:background="#ffffff"
        android:id="@+id/imageView6"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:id="@+id/button_client_game"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_state"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/button_client_record"
        android:layout_below="@+id/button_client_game"
        android:layout_alignLeft="@+id/button_client_game"
        android:background="@drawable/button_state"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk"
        android:id="@+id/button_client_talk"
        android:layout_below="@+id/button_client_record"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/button_client_record"
        android:background="@drawable/button_state"
        android:textColor="#ffffff" />

</RelativeLayout>